generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id        String   @id @default(uuid())
    login     String   @unique
    password  String
    version   Int      @default(1)
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Track {
    id       String     @id @default(uuid())
    name     String
    artistId String?
    albumId  String?
    duration Int
    artists  Artist?    @relation(fields: [artistId], references: [id])
    album    Album?     @relation(fields: [albumId], references: [id])
    favorite Favorite[]
}

model Artist {
    id       String     @id @default(uuid())
    name     String
    grammy   Boolean
    tracks   Track[]
    albums   Album[]
    favorite Favorite[]
}

model Album {
    id       String     @id @default(uuid())
    name     String
    year     Int
    artistId String?
    tracks   Track[]
    artists  Artist?    @relation(fields: [artistId], references: [id])
    favorite Favorite[]
}

model Favorite {
    id      String   @id @default(uuid())
    artists Artist[]
    albums  Album[]
    tracks  Track[]
}
